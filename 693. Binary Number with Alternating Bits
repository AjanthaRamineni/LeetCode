//O(n) time and O(1) space
class Solution {
    public boolean hasAlternatingBits(int n) {
        String binary = getBinary(n);
        for(int i=0;i<binary.length()-1;i++){
            if(binary.charAt(i+1)==binary.charAt(i)) return false;
        }
        return true;
    }
    
    public String getBinary(int n){
        String result = "";
        while(n>0){
            int val = n%2;
            n/=2;
            result = val + result;
        }
        return result;
    }
}
