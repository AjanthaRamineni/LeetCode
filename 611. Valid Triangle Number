//O(n^2) time and O(1) space
class Solution {
    public int triangleNumber(int[] nums) {
        if(nums==null || nums.length==0) return 0;
        int n = nums.length;
        Arrays.sort(nums);
        int sum = 0;
        for(int i=0;i<n-2;i++){
            for(int j=i+1;j<n-1;j++){
                int k = j+1;
                while(k<n && nums[i]+nums[j]>nums[k]) k++;
                sum+=(k-j-1);
            }
        }
        return sum;
    }
}
