//O(n) time and O(1) space
class Solution {
    public List<String> summaryRanges(int[] nums) {
        List<String> list = new ArrayList();
        int n = nums.length;
        if(nums==null || n==0) return list;
        boolean flag = false;int start = Integer.MAX_VALUE;
        for(int i=0;i<n;i++){
            int num = nums[i];
            if(!flag){
                System.out.println("In first condition");
                start = num;
                flag = true;
                if(i==n-1 || num+1!=nums[i+1]){
                    list.add(start+"");
                    start = Integer.MAX_VALUE;
                    flag = false;
                }
            }
            else{
                if(nums[i]!=nums[i-1]+1){
                    System.out.println("In second condition");
                    list.add(start+"->"+nums[i-1]);
                    start = Integer.MAX_VALUE;
                    flag = false;
                    i--;
                }
            }
        }
        if(flag) list.add(start+"->"+nums[n-1]);
        return list;
    }
}
