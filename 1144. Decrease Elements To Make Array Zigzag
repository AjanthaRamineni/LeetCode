//O(n) time and O(1) space
class Solution {
    public int movesToMakeZigzag(int[] nums) {
        int odd = 0;
        int even = 0;
        int left = 0;
        int right = 0;
        for(int i = 0; i < nums.length; i++){
                if(i - 1 < 0){
                    left = Integer.MAX_VALUE;
                }else{
                    left = nums[i - 1];
                }
                if(i + 1 >= nums.length){
                    right = Integer.MAX_VALUE;
                }else{
                    right = nums[i + 1];
                }
                int min = Math.min(right,left);

            if(i % 2 == 0){
                if(nums[i] >= min){
                    even += nums[i] - min + 1;
                }
            }else{
                  if(nums[i] >= min){
                    odd += nums[i] - min + 1;
                }
            }
        
        }
        return Math.min(odd,even);
    }
}
