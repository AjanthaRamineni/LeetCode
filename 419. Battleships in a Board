//O(mn) time and O(1) space
class Solution {
    public int countBattleships(char[][] grid) {
        if(grid==null || grid.length==0) return 0;
        int m = grid.length;
        int n = grid[0].length;
        int count = 0;
        for(int i=0;i<m;i++){
            for(int j=0;j<n;j++){
                if(grid[i][j]=='X'){
                    dfs(grid,i,j,m,n);
                    count++;
                }
            }
        }
        for(int i=0;i<m;i++){
            for(int j=0;j<n;j++){
                if(grid[i][j]=='*') grid[i][j] = 'X';
            }
        }
        return count;
    }
    public void dfs(char[][] grid, int i, int j, int m, int n){
        if(i<0 || i==m || j<0 || j==n || grid[i][j]!='X') return;
        grid[i][j] = '*';
        dfs(grid,i+1,j,m,n);
        dfs(grid,i-1,j,m,n);
        dfs(grid,i,j-1,m,n);
        dfs(grid,i,j+1,m,n);
    }
}
