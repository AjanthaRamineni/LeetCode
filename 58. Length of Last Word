//O(n) and O(1)
class Solution {
    public int lengthOfLastWord(String s) {
        if(s==null || s.length()==0) return 0;
        int n = s.length();
        int count = s.charAt(0)==' '?0:1;
        for(int i=1;i<n;i++){
            if(s.charAt(i)!=' '){
                if(s.charAt(i-1)==' '){
                    count = 1;
                }
                else{
                    count++;
                }
            }
        }
        return count;
    }
}
