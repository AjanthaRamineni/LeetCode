//O(n) time and O(1) space
class Solution {
    public int lengthOfLastWord(String str) {
        //Sanity check
        String s = str.trim();
        if(s==null || s.length()==0) return 0;
        int count =0;
        for(int i=0;i<s.length();i++){
            if(s.charAt(i)==' '){
                count = 0;
            }
            else 
                count++;
        }
        return count;
    }
}
