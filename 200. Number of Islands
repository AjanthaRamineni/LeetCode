//O(mn) time and space
class Solution {
    public int numIslands(char[][] grid) {
        //Sanity check
        if(grid==null || grid.length==0) return 0;
        int count = 0;
        int m = grid.length;
        int n = grid[0].length;
        for(int i=0;i<m;i++){
            for(int j=0;j<n;j++){
                if(grid[i][j]=='1'){
                    ++count;
                    helper(grid,i,j,m,n);
                }
            }
        }
        return count;
    }
    public void helper(char[][] grid, int i, int j, int m, int n){
        if(i<0 || j<0 || i>=m || j>=n || grid[i][j]=='0') return;
        grid[i][j] = '0';
        helper(grid,i+1,j,m,n);
        helper(grid,i-1,j,m,n);
        helper(grid,i,j-1,m,n);
        helper(grid,i,j+1,m,n);
    }
}
