//O(n) time and space
class Solution {
    int sum = 0;
    public int sumNumbers(TreeNode root) {
        if(root==null) return 0;
        dfs(root, 0);
        return sum;
    }
    
    public void dfs(TreeNode root, int cur) {
        if(root==null) return;
        cur = cur*10 + root.val;
        if(root.left==null && root.right==null) {
            sum+=cur;
        }
        else {
            dfs(root.left, cur);
            dfs(root.right, cur);
        }
        cur-=root.val;
        cur/=10;
    }
    
}
